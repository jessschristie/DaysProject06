<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="~/css/AngularStyle.css" />
</head>

<body ng-app="myApp" ng-controller="movieController">
    <h1>Movie List</h1>

    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <h4 class="box-title">Release Date Interval</h4>
                <div class="input-group">
                    Start Date:
                    <input type="date" data-ng-model="filter.movie.Release.start" />
                    End Date:
                    <input type="date" data-ng-model="filter.movie.Release.end" />
                </div>
            </div>
        </div>
        <br />        

        <div class="row">
            <div class="col-md-1">
                <button type="button" class="btn btn-block btn-success btn-flat" ng-click="search()">Search</button>
            </div>
            <div class="col-md-1">
                <button type="reset" class="btn btn-block btn-success btn-flat" ng-click="reset()">Reset</button>
            </div>
        </div>

    </div>

    <table>
        <tr>
            <th>Title</th>
            <th>Weekend Revenue</th>
            <th>Gross Revenue</th>
            <th>Release</th>
            <th>Recommended</th>
        </tr>
        <tr ng-repeat="movie in MoviesData | filter: movie.Release:filter.movie.Release.start">
            <td>{{ movie.Title }}</td>
            <td>{{ movie.WeekendRevenue }}</td>
            <td>{{ movie.GrossRevenue }}</td>
            <td>{{ movie.Release | toDate }}</td>
            <td ng-if="movie.Recommended">Yes</td>
            <td ng-if="!movie.Recommended">No</td>
        </tr>
    </table>

    <script src="~/Scripts/Angular/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.5/angular-route.js"></script>
    <script src="~/Scripts/Angular/AngularController.js"></script>

</body>
</html>
